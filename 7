#include <stdio.h>

int main() {

//    int go;
//    scanf("%o", go);

    struct device {
        unsigned play;
        unsigned pouse;
        unsigned record;
    } mp3;

    mp3.play = 1;
    mp3.pouse = 0;
    mp3.record = 0;
    printf("Если плеер играет, то 1, если нет, то 0\n - %d",(mp3.play));
    printf("\nЕсли стоит пауза, то 1, если нет, то 0\n - %d",(mp3.pouse));
    printf("\nЕсли идёт запись, то 1, если нет, то 0\n - %d",(mp3.record));
